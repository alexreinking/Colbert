func addToArray(@ref,i,n)
{
	if(n > 0) {
		ref[i] = ref[i] + n;
	} else if(n == 0) {
		ref[i] = ref[i] + 3;
	} else {
		ref[i] = ref[i] + 1;
	}
}

func pow(base,power)
{
    let tmp = 1;
    while(power)
    {
        tmp = tmp * base;
        power = power-1;
    }
    return tmp;
}

