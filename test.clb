let err = 0; //Because Colbert does not allow for discarded values, functions that return an area code can dump it into this variable.

func addToArray(@ref,i,n)
{
	if(n > 0) {
		ref[i] = ref[i] + n;
	} else if(n == 0) {
		ref[i] = ref[i] + 3;
	} else {
		ref[i] = ref[i] + 1;
	}
}

func pow(base,power) //This function is totally unnecessary given the ** operator
{
    let tmp = 1;
    while(power)
    {
        tmp = tmp * base;
        power = power-1;
    }
    return tmp;
}

func main()
{
	let arr;
	arr[0] = 3;
	arr[1] = 10;
	arr[2] = 15;
	arr[3] = 92;

	err = addToArray(arr,1,pow(2,2));

	let pi = arr[0] + arr[1]/100 + arr[2]/10000 + arr[3]/1000000;
	err = print("Pi is approximately: " + pi + "\n"); //Print is defined externally
	let angle = prompt("Enter an angle(degrees): "); //Prompt is defined externally
	err = print("The tangent of your angle is approximately: " + tan(angle*(pi+0.000000653589793)/180) + "\n"); //Cos is defined externally
	
	let str = "Hello, World!";
	err = split(str);
	err = print(str[1] + str[4] + "\n" + "Length of \"Hello, World!\" is " + strlen(join(str)) + "\n");
}
